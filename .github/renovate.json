{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommitTypeAll(chore)"
  ],
  "enabledManagers": [
    "dockerfile",
    "github-actions",
    "gomod",
    "pre-commit"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ],
  "platformAutomerge": true,
  "pre-commit": {
    "enabled": true
  },
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
